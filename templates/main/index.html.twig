{% extends 'base.html.twig' %}

{% block title %}Привет чувак{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {{ form_start (form) }}
    {{ form_widget (form) }}
    {{ form_end (form) }}

    <table class="table">

        <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>


        {% for note in notes %}
        <tr>
            <th scope="row">{{ note.id }}</th>
            <td>{{ note.title }}</td>
            <td>{{ note.descroption }}</td>
            <td>{{ note.status }}</td>
            <td><a href="{{ path('remove_note', {'note': note.id}) }}" class="btn btn-primary">Delete</a></td>
        </tr>
        {% endfor %}
        </tbody>

    </table>


</div>
{% endblock %}
